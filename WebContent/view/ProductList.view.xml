<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="smax.batch27.MasterDetail.controller.ProductList"
		 xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	        <List items="{/ProductSet}" id="idList">
	          <items>
	             <StandardListItem title="{ProductID}" description="{Name}"
	             type="Active" press="onItemSelection"
	             />
	          </items>
	        </List>
		</content>
	</Page>
</core:View>